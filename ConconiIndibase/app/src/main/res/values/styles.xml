<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarTabStyle">@style/MainActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@style/MainActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MainActionBarTab"
        parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:showDividers">none</item>
        <item name="android:measureWithLargestChild">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>


    <style name="MainActionBar" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerPadding">0dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <color name="green01" type="color">#71A044</color>
    <color name="green02" type="color">#48b787</color>
    <color name="green03" type="color">#49b9ae</color>
    <color name="green04" type="color">#73be4b</color>
    <color name="blue01" type="color">#79b6d1</color>
    <color name="blue02" type="color">#7982ce</color>
    <color name="blue03" type="color">#338FAF</color>
    <color name="yellow01" type="color">#ffe400</color>
    <color name="orange01" type="color">#e6b520</color>
    <color name="orange02" type="color">#f6901f</color>
    <color name="red01" type="color">#f46a57</color>
    <color name="inactive_gray" type="color">#8e8e8e</color>

    <color name="advice1" type="color">#CE5E5E</color>
    <color name="advice2" type="color">#F69020</color>
    <color name="advice3" type="color">#EACE00</color>
    <color name="advice4" type="color">#C8DD00</color>
    <color name="advice5" type="color">#73BF4C</color>

</resources>
