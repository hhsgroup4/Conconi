<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/blue01"
    tools:context="com.indibase.conconi.app.PresentationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="0dp"
            android:background="@android:color/white">

            <com.androidplot.xy.XYPlot
                android:id="@+id/simpleXYPlot"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="0dp"
                android:layout_marginTop="0px"
                android:layout_marginLeft="0px"
                android:layout_marginRight="0px" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="TIME"
                        android:textColor="@color/blue03"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/textView6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="00:00"
                        android:textColor="@color/blue03"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/lbl_pres_time"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView6" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="DEFLECTION POINT"
                        android:textColor="@color/blue03"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/textView10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:textColor="@color/blue03"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/lbl_pres_dp"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView10" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView10"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="LEVEL REACHED"
                            android:textColor="@color/blue03"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:id="@+id/textView8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="0"
                            android:textColor="@color/blue03"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:id="@+id/lbl_pres_lvl"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/textView8" />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="90dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="fill_parent"
                android:background="@android:color/white"
                android:layout_marginTop="20dp">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_advice_1"
                        android:scaleType="centerInside"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:src="@mipmap/btn_advice_1" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:id="@+id/imageView2"
                        android:scaleType="centerInside"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:src="@mipmap/btn_advice_2" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:id="@+id/imageView3"
                        android:scaleType="centerInside"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:src="@mipmap/btn_advice_3" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:id="@+id/imageView4"
                        android:scaleType="centerInside"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:src="@mipmap/btn_advice_4" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:id="@+id/imageView5"
                        android:scaleType="centerInside"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:src="@mipmap/btn_advice_5" />
                </FrameLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn_delete"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@mipmap/btn_delete"
                    android:layout_marginLeft="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="false"
                    android:onClick="deleteTest"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:padding="0dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn_home"
                    android:src="@mipmap/btn_home"
                    android:scaleType="fitEnd"
                    android:layout_weight="1"
                    android:onClick="navigateHome"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
