<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@mipmap/listitem_bg_white"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <TextView android:id="@+id/lbl_listrow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="The title"
            android:textColor="@color/orange01"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description of the content [...]"
            android:textSize="16sp"
            android:textColor="@color/orange02"
            android:id="@+id/lbl_listitem_date"
            android:layout_below="@+id/lbl_listrow_title"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"/>



    </RelativeLayout>
</RelativeLayout>