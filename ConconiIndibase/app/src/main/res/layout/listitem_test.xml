<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:layout_margin="0dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:background="@mipmap/listitem_bg_white"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

    <TextView android:id="@+id/lbl_histlist_date"
        android:text="date"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/blue03"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/lbl_histlist_time"
        android:text="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/blue03"
        android:layout_below="@+id/lbl_histlist_date"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/lbl_histlist_dp"
        android:text="DP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/blue02"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>